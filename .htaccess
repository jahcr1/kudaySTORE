# Activar reescritura
RewriteEngine On
RewriteBase /

##############################################
# 游 1. Bloquear archivos ocultos y sensibles
##############################################

# Archivos como .env, .gitignore, .htaccess
<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# Archivos de configuraci칩n que no deben ser accedidos nunca
<FilesMatch "^(composer\.json|composer\.lock|config\.php)$">
  Require all denied
</FilesMatch>

##############################################
# 游 2. Bloquear acceso por navegador a scripts backend de la ra칤z
##############################################
# (permitir fetch, POST, redirecci칩n interna, include, etc.)

RewriteCond %{THE_REQUEST} ^GET\s.*/(cerrar|actualizar_carrito|descargar_pdf|eliminar_producto|modificar_producto)\.php\sHTTP [NC]
RewriteRule ^ - [F,L]

##############################################
# 游 3. Bloquear acceso por navegador a archivos PHP dentro de /componentes/
##############################################

RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/componentes/(acceder|add_to_cart|borrar_sesion|calcular_envio|cargar_productos|conexion|confirmar_compra|imagen_producto|listar_productos|mostrar_compras|mostrar_imagen|obtener_carrito|procesar_compra|rechazar_compra|salir|vaciar_carrito)\.php\sHTTP [NC]
RewriteRule ^ - [F,L]

##############################################
# 游 4. Bloquear carpetas internas
##############################################

RewriteRule ^vendor(/.*)?$ - [F,L]
RewriteRule ^facturas(/.*)?$ - [F,L]

##############################################
# 游깷 5. Redirecci칩n de HTTP a HTTPS
##############################################

#RewriteCond %{HTTPS} off
#RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

##############################################
# 游 6. URL amigables (.php oculto)
##############################################

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

##############################################
# 游대 7. Rutas personalizadas
##############################################

DirectoryIndex index.php

RewriteRule ^admin$ panel.php [L]
RewriteRule ^carrito$ carrito.php [L]
RewriteRule ^producto$ producto.php [L]
RewriteRule ^contacto$ contacto.php [L]

# Vistas din치micas desde carpeta vistas/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(cartucheras|billeteras|bolsomatero|neceser|promociones|setmatero|varios)$ vistas/$1.php [L]
